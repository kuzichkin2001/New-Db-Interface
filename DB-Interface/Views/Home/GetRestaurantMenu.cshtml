@model IEnumerable<Entities.RestaurantMenuView>

@{
    ViewData["Title"] = "GetRestaurantMenu";
}

<h1>GetRestaurantMenu</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dish_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dish_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kitchen_Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Dish_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dish_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kitchen_Name)
            </td>
        </tr>
}
    </tbody>
</table>
