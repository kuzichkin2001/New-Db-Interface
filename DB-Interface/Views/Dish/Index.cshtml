@model IEnumerable<Entities.DishView>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (ViewContext.HttpContext.User.IsInRole("admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dish_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dish_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kitchen_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Dish_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dish_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kitchen_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @if (ViewContext.HttpContext.User.IsInRole("admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Dish_Id })     
                }
                @if (ViewContext.HttpContext.User.IsInRole("admin"))
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.Dish_Id })       
                }
            </td>
        </tr>
}
    </tbody>
</table>
